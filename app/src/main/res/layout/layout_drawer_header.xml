<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_image_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:contentDescription="@string/description_application_logo"
        android:paddingVertical="20dp"
        app:srcCompat="@drawable/icon_baseline_demo_logo_24dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/header_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="10dp"
        android:gravity="center|start"
        android:paddingHorizontal="15dp"
        android:text="@string/resource_account_name"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:drawableLeftCompat="@drawable/icon_baseline_person_24dp"
        app:drawableTint="@color/white" />

    <TextView
        android:id="@+id/header_schedule_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="10dp"
        android:gravity="center|start"
        android:paddingHorizontal="15dp"
        android:text="@string/resource_schedule_name"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:drawableLeftCompat="@drawable/icon_baseline_calendar_month_24dp"
        app:drawableTint="@color/white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_login"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.LoginFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <View
            style="@style/Divider.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/main_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/description_application_logo"
            android:src="@drawable/icon_baseline_demo_logo_24dp" />

        <View
            style="@style/Divider.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/main_background" />

        <LinearLayout
            android:id="@+id/linear_layout_username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_rounded_rectangular"
            android:padding="5dp"
            android:layout_marginHorizontal="25dp">

            <org.alexcawl.health_check_application.ui.resource.EditTextWithClearButton
                android:id="@+id/edit_text_username_field"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:drawableStart="@drawable/selector_baseline_account_24dp"
                android:drawablePadding="10dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/selector_edit_text_rounded"
                android:hint="@string/hint_enter_username"
                android:autofillHints="username"/>

            <ImageButton
                android:id="@+id/image_button_username_field"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/selector_baseline_question_mark_24dp"
                android:backgroundTint="?attr/colorOnBackground"
                android:contentDescription="@string/hint_show_options"/>
        </LinearLayout>

        <View
            android:id="@+id/divider_top"
            style="@style/Divider.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/main_background" />

        <TextView
            android:id="@+id/hidden_username_options"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/shape_rounded_rectangular"
            android:padding="10dp"
            android:text="@string/hint_login_description"
            android:textColor="?attr/colorOutline"
            android:textSize="18sp"
            android:visibility="visible" />

        <View
            android:id="@+id/divider_bottom"
            style="@style/Divider.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/main_background" />

        <LinearLayout
            android:id="@+id/linear_layout_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_rounded_rectangular"
            android:padding="5dp"
            android:layout_marginHorizontal="25dp">

            <org.alexcawl.health_check_application.ui.resource.EditTextWithClearButton
                android:id="@+id/edit_text_password_field"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:drawableStart="@drawable/selector_baseline_lock_24p"
                android:drawablePadding="10dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/selector_edit_text_rounded"
                android:hint="@string/hint_enter_password"
                android:autofillHints="password"
                android:inputType="textPassword"/>

            <ImageButton
                android:id="@+id/image_button_password_field"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/selector_baseline_eye_24dp"
                android:backgroundTint="?attr/colorOnBackground"
                android:contentDescription="@string/hint_show_options"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="16dp"
        android:text="@string/namespace_sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
